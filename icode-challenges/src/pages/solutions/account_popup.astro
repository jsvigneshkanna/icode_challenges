---
import BaseLayout from "../../layout/baseLayout.astro";
---

<BaseLayout title="Pricing Card">
  <div
    class="min-h-screen flex-col flex justify-center items-center py-10 bg-gradient-to-br from-emerald-100 to-red-100 text-black"
  >
    <!-- Popup modal -->
    <div
      class="hidden p-8 bg-white rounded-xl shadow-lg shadow-slate-800/30 mb-6 relative transition delay-300 duration-300 ease-in-out"
      id="popup"
    >
      <!-- triangle down -->
      <div class="w-6 h-6 bg-white absolute -bottom-3 left-[calc(100%-50%-12px)] rotate-45"></div>

      <div class="flex flex-row justify-evenly items-center gap-3">
        <img
          src="https://avatars.githubusercontent.com/u/42484705?v=4"
          alt="vignesh"
          class="w-12 h-12 md:w-14 md:h-14 object-cover outline outline-1 outline-blue-600 rounded-full shadow-md shadow-slate-700/60"
        />
        <a
          class="pr-3 hover:-translate-y-1 delay-200 ease-in-out transition-transform cursor-pointer"
          href="https://github.com/jsvigneshkanna"
          target="_blank"
          rel="noreferrer"
        >
          <h1 class="text-slate-900 text-base tracking-tight font-semibold">J S Vignesh Kanna</h1>
          <h3 class="text-slate-800 font-medium text-sm tracking-wide">@jsvigneshkanna</h3>
        </a>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="0.7"
          stroke="gray"
          class="w-10 h-10"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>

      <div class="flex flex-row justify-start items-center text-sm md:text-[15px] text-blue-500 font-medium gap-2 mt-5">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"></path>
        </svg>
        <p>Connect other account</p>
      </div>

      <div class="mt-6 h-[1px] bg-gradient-to-r from-zinc-900/10 to-blue-900/10"></div>

      <div class="flex flex-col justify-center items-center w-full gap-4 mt-6">
        <div class="flex flex-row justify-between items-center w-full">
          <div class="flex flex-row justify-start items-center text-slate-800 gap-2 cursor-pointer hover:scale-105">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.4"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0l4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0l-5.571 3-5.571-3"
              >
              </path>
            </svg>
            <p class="font-medium text-sm tracking-wide">Support</p>
          </div>
          <div class="flex flex-row justify-start items-center text-slate-800 gap-2 cursor-pointer hover:scale-105">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.4"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z"
              >
              </path>
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"> </path>
            </svg>

            <p class="font-medium text-sm tracking-wide">Settings</p>
          </div>
        </div>
        <div class="flex flex-row justify-between items-center w-full">
          <div class="flex flex-row justify-start items-center text-slate-800 gap-2 cursor-pointer hover:scale-105">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.4"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"
              >
              </path>
            </svg>

            <p class="font-medium text-sm tracking-wide">Upgrade</p>
          </div>
          <div class="flex flex-row justify-start items-center text-slate-800 gap-2 cursor-pointer hover:scale-105">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.4"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9"
              >
              </path>
            </svg>

            <p class="font-medium text-sm tracking-wide">Logout</p>
          </div>
        </div>
      </div>
    </div>
    <!-- user image and name -->
    <div
      class="p-2 rounded-full flex flex-row justify-start items-center bg-blue-400/20 gap-4 delay-150 transition-transform ease-in-out cursor-pointer shadow-lg shadow-slate-700/30 hover:shadow-blue-700/30"
      id="user-container"
    >
      <img
        src="https://avatars.githubusercontent.com/u/42484705?v=4"
        alt="vignesh"
        class="w-12 h-12 md:w-14 md:h-14 object-cover outline outline-1 outline-blue-600 rounded-full"
      />
      <div class="pr-8 md:pr-12">
        <h1 class="text-slate-900 text-base tracking-tight font-semibold">J S Vignesh Kanna</h1>
        <h3 class="text-slate-800 font-medium text-sm tracking-tighter">@jsvigneshkanna</h3>
      </div>
    </div>
  </div>
</BaseLayout>
